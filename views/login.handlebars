<div>
  {{! Form for logging in }}
  <form class='login-form'>

    {{! Email Field}}
    <label for='email'>
      Email:
    </label>
    <input type='email' id='email' name='email' required />
    <br />

    {{! Password field}}
    <label for='password'>
      Password:
    </label>
    <input type='password' id='password' name='password' required />
    <br />

    <button type='submit' value='Submit' id='login-submit'>
      Submit
    </button>
  </form>
</div>

<script src='/js/login.js'></script>
