<div>
  {{! Form for signing up }}
  <form id='signup-form' class='signup-form'>

    {{! Name Field}}
    <label for='name'>
      Name:
    </label>
    <input type='text' id='name' name='name' required />
    <br />

    {{! Email Field}}
    <label for='email'>
      Email:
    </label>
    <input type='email' id='email' name='email' required />
    <br />

    {{! Password field}}
    <label for='password'>
      Password:
    </label>
    <input type='password' id='password' name='password' required />
    <br />

    <button type='submit' value='Submit' id='signup-submit'>
      Submit
    </button>
  </form>
</div>

<script src='/js/signup.js'></script>
